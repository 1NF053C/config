Bootstrap: docker
From: node:18-alpine

%files
    ./environment.sh /environment.sh
    ./buildapp.sh /buildapp.sh
    ./include/* /include/

%appinstall compute
    SOURCE_ENV=". /environment.sh"
    eval ${SOURCE_ENV}
    echo ${SOURCE_ENV} >>${APPTAINER_ENVIRONMENT}
    
    cp /include/* ${XDG_CONFIG_HOME}/compute/include # this is dumb lol
    cp /buildapp.sh ${XDG_CONFIG_HOME}/buildapp.sh

    . ${XDG_CONFIG_HOME}/buildapp.sh

%apprun compute
    apptainer run --app app --containall ${XDG_DATA_HOME}/compute/app.sif

%labels
    Author 1nf053c
    Version 1.0
    Description "Container for compute"
